{
    "extends": "eslint:recommended",

    "env": {
        "browser": true,
        "node": true
    },

    "rules": {
        // possible errors
        "no-console": 0,

        // best practicies
        "curly": 2,
        "eqeqeq": 2,
        "no-eval": 2,
        "no-extend-native": [1, {
            "exceptions": ["String"]
        }],
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-lone-blocks": 1,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-new-wrappers": 1,
        "no-new": 2,
        "no-octal": 1,
        "no-proto": 2,
        "no-script-url": 2,
        "no-self-compare": 1,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unused-expressions": 2,
        "no-useless-call": 1,
        "no-void": 2,
        "no-with": 2,
        "radix": 1,
        "wrap-iife": [2, "inside"],
        "yoda": 2,

        // variables
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undefined": 2,
        "no-use-before-define": [2, "nofunc"],

        // node.js and common.js
        "global-require": 2,
        "handle-callback-err": [2, "^(err|error)$"],
        "no-path-concat": 2,

        // stylistic issues
        "block-spacing": [2, "always"],
        "brace-style": [2, "stroustrup", {
            "allowSingleLine": false
        }],
        "camelcase": 1,
        "comma-spacing": [2, {
            "before": false,
            "after": true
        }],
        "comma-style": [2, "last"],
        "computed-property-spacing": [2, "never"],
        "eol-last": 2,
        "indent": 2,
//        "jsx-quotes": [2, "prefer-double"],
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true
        }],
        "lines-around-comment": [2, {
            "beforeBlockComment": true,
            "beforeLineComment": true,
            "allowBlockStart": true,
            "allowObjectStart": true
        }],
        "new-cap": 2,
        "new-parens": 2,
        "newline-after-var": [2, "always"],
        "no-array-constructor": 2,
        "no-multiple-empty-lines": [2, {
            "max": 2
        }],
        "no-nested-ternary": 1,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 1,
        "one-var": [2, "never"],
        "quote-props": [2, "as-needed"],
        "quotes": [2, "single"],
        "semi-spacing": 2,
        "semi": [2, "always"],
        "space-after-keywords": [2, "never"],
        "space-before-blocks": [2,"always"],
        "space-before-function-paren": [2, "never"],
        "space-before-keywords": [2, "always"],
        "space-in-parens": [2, "never"],
        "space-return-throw-case": 2,
        "space-unary-ops": 2,
        "spaced-comment": [2, "always", { "exceptions": ["-", "=", "*"] }],
        "wrap-regex": 2
    }
}
